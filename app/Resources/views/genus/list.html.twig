{% extends 'base.html.twig' %}
{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Genus</th>
            <th>Sub Family</th>
            <th># of species</th>
            <th>Last updated</th>
        </tr>
        </thead>
        <tbody>
        {% for genus in genuses %}
            {#{{ dump(genus) }}#}
            <tr>
                <td>{{ genus.id }}</td>
                <td>{{ genus.name }}</td>
                <td>{{ genus.subFamily.name }}</td>
                {#<td><a href="{{ path('genus_show', {'genusName': genus.name}) }}">{{ genus.name }}</a></td>#}
                <td>{{ genus.speciesCount }}</td>
                <td>{{ genus.updatedAt|date('Y-m-d') }}</td>
                <td>
                    <a href="{{ path('admin_genus_edit', {'id': genus.id}) }}" class="btn btn-xs btn-success"><span class="fa fa-pencil"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}